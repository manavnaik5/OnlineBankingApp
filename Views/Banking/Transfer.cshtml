@model OnlineBankingApp.ViewModels.TransferViewModel

@{
    ViewData["Title"] = "Transfer Funds";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h3 class="card-title mb-0">Transfer Money</h3>
            </div>
            <div class="card-body">
                <form asp-action="Transfer" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="RecipientEmail" class="form-label"></label>
                        <input asp-for="RecipientEmail" class="form-control" type="email" />
                        <span asp-validation-for="RecipientEmail" class="text-danger"></span>
                        <small class="form-text text-muted">Enter the email address of the recipient's account.</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Amount" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Amount" class="form-control" step="0.01" />
                        </div>
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-info w-100">Transfer</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to Account</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
