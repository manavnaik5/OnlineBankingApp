@model IEnumerable<OnlineBankingApp.Models.Transaction>

@{
    ViewData["Title"] = "All Transactions";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0">All Transactions</h3>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>From Account</th>
                                    <th>To Account</th>
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model)
                                {
                                    <tr>
                                        <td>@transaction.TransactionDate.ToString("g")</td>
                                        <td>@(transaction.FromAccount?.AccountNumber ?? "N/A")</td>
                                        <td>@(transaction.ToAccount?.AccountNumber ?? "N/A")</td>
                                        <td>
                                            <span class="badge bg-@(transaction.Type == OnlineBankingApp.Models.TransactionType.Deposit ? "success" : transaction.Type == OnlineBankingApp.Models.TransactionType.Withdrawal ? "warning" : "info")">
                                                @transaction.Type
                                            </span>
                                        </td>
                                        <td>@transaction.Description</td>
                                        <td class="text-danger">-$@transaction.Amount.ToString("F2")</td>
                                        <td>
                                            <span class="badge bg-success">Completed</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center">
                        <p class="text-muted">No transactions found.</p>
                    </div>
                }
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to Users</a>
        </div>
    </div>
</div>
